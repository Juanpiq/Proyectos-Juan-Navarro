@model PTJuanNavarro.Models.CrearCotizacionViewModel

<h2>Nueva Cotización</h2>

<form id="crearCotizacionForm" method="post" asp-action="CrearCotizacion">
    <input type="hidden" id="ultimaCotizacionId" value="@Model.UltimaCotizacionId" />
    <input type="hidden" name="ClienteId" value="@Model.ClienteId" />
    <div>
        <label for="marca">Marca del carro:</label>
        <input type="text" id="marca" name="Marca" required />
    </div>
    <div>
        <label for="modelo">Modelo del carro:</label>
        <input type="text" id="modelo" name="Modelo" required />
    </div>
    <div>
        <label for="anioFabricacion">Año de fabricación:</label>
        <input type="number" id="anioFabricacion" name="AnioFabricacion" min="1900" required />
    </div>
    <div>
        <label for="costoAuto">Costo del auto:</label>
        <input type="text" id="costoAuto" name="CostoAuto" pattern="\d+(\.\d{1,2})?" required />
    </div>
    <div>
        <label for="tipoSeguro">Tipo de seguro:</label>
        <select id="tipoSeguro" name="TipoSeguro">
            <option value="terceros">Terceros</option>
            <option value="completo">Completo</option>
        </select>
    </div>
    <div>
        <label for="cobertura">Cobertura:</label>
        <select id="cobertura" name="Cobertura">
            <option value="responsabilidadCivil">Responsabilidad Civil</option>
            <option value="limitada">Limitada</option>
            <option value="amplia">Amplia</option>
        </select>
    </div>
    <div>
        <button type="button" onclick="generarCotizacion()">Generar Cotización</button>
    </div>
</form>

<!-- Modal -->
<div id="modalOverlay"></div>
<div id="cotizacionModal">
    <h3>Previsualización de Cotización</h3>
    <div class="modal-content">
        <p><strong>ID de Cotización:</strong> <span id="cotizacionId"></span></p>
        <p><strong>Nombre del Cliente:</strong> @Model.Nombre @Model.Apellido</p>
        <p><strong>Modelo del Carro:</strong> <span id="modalModeloCarro"></span></p>
        <p><strong>Año de Fabricación:</strong> <span id="modalAnioFabricacion"></span></p>
        <p><strong>Precio de Cotización: B/.</strong> <span id="modalPrecioCotizacion"></span></p>
    </div>
    <div>
        <button type="button" onclick="guardarCotizacion()">Guardar Cotización</button>
        <button type="button" onclick="cerrarModal()">Cancelar</button>
    </div>
</div>

<script src="~/js/MODAL.js"></script>

<link rel="stylesheet" href="~/css/MODAL.css" />